# Production Environment Configuration
# Newsletter Scraper Platform

# ===================
# CORE APPLICATION
# ===================
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://your-production-domain.com

# ===================
# DATABASE (Supabase)
# ===================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key

# ===================
# SECURITY
# ===================
JWT_SECRET=your-super-secure-production-jwt-secret-minimum-32-characters
ENCRYPTION_KEY=your-32-character-encryption-key-here-production

# ===================
# OAUTH AUTHENTICATION
# ===================
# Gmail OAuth
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret
GOOGLE_REDIRECT_URI=https://your-production-domain.com/auth/google/callback

# Microsoft OAuth
MICROSOFT_CLIENT_ID=your-production-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-production-microsoft-client-secret
MICROSOFT_REDIRECT_URI=https://your-production-domain.com/auth/microsoft/callback

# ===================
# EMAIL PROCESSING
# ===================
SENDGRID_WEBHOOK_SECRET=your-production-sendgrid-webhook-secret

# ===================
# AI SERVICES
# ===================
OPENAI_API_KEY=your-production-openai-api-key

# ===================
# REDIS (Queue Processing)
# ===================
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# ===================
# RSS POLLING
# ===================
RSS_POLLING_ENABLED=true
RSS_POLLING_INTERVAL=1800000

# ===================
# RATE LIMITING
# ===================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
EMAIL_RATE_LIMIT_MAX=50
WEBHOOK_RATE_LIMIT_MAX=200

# ===================
# LOGGING & MONITORING
# ===================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# ===================
# SECURITY HEADERS
# ===================
CORS_ORIGIN=https://your-production-domain.com
TRUST_PROXY=true